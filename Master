#include <WiFi.h>
#include <HTTPClient.h>
#include <PubSubClient.h>
#include <DHT.h>
#include <SPI.h>
#include <MFRC522.h>

// --- 1. NETWORK CONFIGURATION ---
const char* ssid = "PASH";
const char* password = "123456789";

// Use the public broker address
const char* mqtt_server = "mqtt-dashboard.com"; 
const int mqtt_port = 1883;

String SLAVE1_IP = "192.168.137.254"; // Pico
String SLAVE2_IP = "192.168.1.102";   // ESP32 Slave

// --- 2. PIN CONFIGURATION ---

// Traffic Light (WiFi Status)
#define TL_RED    12
#define TL_YELLOW 14
#define TL_GREEN  27

// Buzzer
#define BUZZER_PIN 15

// Sensors
#define DHTPIN 4         
#define DHTTYPE DHT11
#define LDR_PIN 35       

// RFID (SPI)
#define SS_PIN  5
#define RST_PIN 17

// --- 3. OBJECTS ---
WiFiClient espClient;
PubSubClient client(espClient);
DHT dht(DHTPIN, DHTTYPE);
MFRC522 rfid(SS_PIN, RST_PIN);

// --- 4. VARIABLES ---
unsigned long lastMsg = 0;
bool lampState = false; 
const int THRESHOLD_DARK = 600; 

// --- 5. HELPER FUNCTIONS ---

void setTrafficLight(int r, int y, int g) {
  digitalWrite(TL_RED, r);
  digitalWrite(TL_YELLOW, y);
  digitalWrite(TL_GREEN, g);
}

void beep() {
  digitalWrite(BUZZER_PIN, HIGH);
  delay(100);
  digitalWrite(BUZZER_PIN, LOW);
}

void setup_wifi() {
  delay(10);
  Serial.println();
  Serial.print("Connecting to ");
  Serial.println(ssid);

  // Status: Trying (Yellow ON)
  setTrafficLight(0, 1, 0);

  WiFi.begin(ssid, password);

  int retry_count = 0;
  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
    retry_count++;
    
    // Blink Yellow every 0.5s
    int state = (retry_count % 2); 
    setTrafficLight(0, state, 0);

    // If it takes too long (e.g., 20 seconds), show RED
    if (retry_count > 40) {
      Serial.println("\nWiFi Failed!");
      setTrafficLight(1, 0, 0); // Red ON
      while(true); // Stop here
    }
  }

  Serial.println("");
  Serial.println("WiFi connected");
  Serial.print("IP address: ");
  Serial.println(WiFi.localIP());

  // Status: Connected (Green ON)
  setTrafficLight(0, 0, 1);
}

void reconnect() {
  // Loop until we're reconnected
  while (!client.connected()) {
    Serial.print("Attempting MQTT connection...");
    String clientId = "ESP32Master-" + String(random(0xffff), HEX);
    
    if (client.connect(clientId.c_str())) {
      Serial.println("connected");
    } else {
      Serial.print("failed, rc=");
      Serial.print(client.state());
      Serial.println(" try again in 5 seconds");
      delay(5000);
    }
  }
}

void controlSlave(String ip, String state) {
  if(WiFi.status() == WL_CONNECTED){
    HTTPClient http;
    // Construct URL
    String url = "http://" + ip + "/update?status=" + state;
    http.begin(url);
    int httpCode = http.GET();
    http.end();
  }
}

// --- 6. MAIN SETUP ---
void setup() {
  Serial.begin(115200);

  // Init Pins
  pinMode(TL_RED, OUTPUT);
  pinMode(TL_YELLOW, OUTPUT);
  pinMode(TL_GREEN, OUTPUT);
  pinMode(BUZZER_PIN, OUTPUT);
  pinMode(LDR_PIN, INPUT);
  
  // Init Components
  dht.begin();
  SPI.begin();
  rfid.PCD_Init();

  // Connect
  setup_wifi();
  client.setServer(mqtt_server, mqtt_port);
}

// --- 7. MAIN LOOP ---
void loop() {
  if (!client.connected()) {
    reconnect();
  }
  client.loop();

  // --- SENSOR LOOP (Every 2 Seconds) ---
  unsigned long now = millis();
  if (now - lastMsg > 2000) {
    lastMsg = now;

    // 1. Read Data
    float h = dht.readHumidity();
    float t = dht.readTemperature();
    int ldrValue = analogRead(LDR_PIN);
    
    // Check if reading failed (Early Exit)
    if (isnan(h) || isnan(t)) {
        Serial.println("DHT Read Failed!");
        return; 
    }

    // 2. Logic
    String lightStatus;
    bool shouldTurnOn = false;

    if (ldrValue < THRESHOLD_DARK) {
      lightStatus = "Dark";
      shouldTurnOn = true;
    } else {
      lightStatus = "Light";
      shouldTurnOn = false;
    }

    // 3. Control Slaves (Only on Change)
    if (shouldTurnOn != lampState) {
      lampState = shouldTurnOn;
      String cmd = shouldTurnOn ? "ON" : "OFF";
      controlSlave(SLAVE1_IP, cmd);
      controlSlave(SLAVE2_IP, cmd);
    }

    // 4. MQTT Publish (Sensors)
    char msg[150];
    snprintf(msg, 150, 
      "{\"temp\":%.1f, \"hum\":%.1f, \"ldr\":%d, \"status\":\"%s\"}", 
      t, h, ldrValue, lightStatus.c_str()
    );
    
    Serial.print("Publishing: ");
    Serial.println(msg);
    
    // Publish to 'home/street/sensors'
    client.publish("home/street/sensors", msg);
  }

  // --- RFID CHECK ---
  if (rfid.PICC_IsNewCardPresent() && rfid.PICC_ReadCardSerial()) {
    String uid = "";
    for (byte i = 0; i < rfid.uid.size; i++) {
      uid += String(rfid.uid.uidByte[i] < 0x10 ? "0" : "");
      uid += String(rfid.uid.uidByte[i], HEX);
    }
    uid.toUpperCase();
    
    Serial.println("RFID: " + uid);
    
    // Action: Beep + MQTT
    beep(); 
    
    char rfidMsg[60];
    snprintf(rfidMsg, 60, "{\"event\":\"scan\", \"uid\":\"%s\"}", uid.c_str());
    
    // Publish to 'home/street/rfid'
    client.publish("home/street/rfid", rfidMsg);
    
    rfid.PICC_HaltA();
  }
}
